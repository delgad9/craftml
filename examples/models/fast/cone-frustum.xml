<craft name="cone-frustum">
    <parameter name="r1" default="10" type="float"/>
    <parameter name="r2" default="5" type="float"/>
    <parameter name="height" default="10" type="float"/>

    <solidify>
        <g layout="centerXY() lineupZ({{height}})">
            <circle radius="{{r1}}"/>
            <circle radius="{{r2}}"/>
        </g>
    </solidify>

</craft>
