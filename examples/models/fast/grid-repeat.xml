<craft name="repeat-grid">
    <parameter name="rows" type="int" default="5"/>
    <parameter name="cols" type="int" default="5"/>
    <parameter name="rowSpacing" type="int" default="5"/>
    <parameter name="colSpacing" type="int" default="5"/>
    <col spacing="{{rowSpacing}}">
        <repeat n="{{rows}}">
            <row spacing="{{colSpacing}}">
                <repeat n="{{cols}}">
                    <content>
                        <cube></cube>
                    </content>
                </repeat>
            </row>
        </repeat>
    </col>
</craft>
