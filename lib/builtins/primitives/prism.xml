<craft name="prism">
    <parameter name="radius" type="float"/>
    <parameter name="height" type="float" default="10"/>
    <parameter name="sides" type="int" default="3"/>
    <parameter name="sideLength" type="float" default="10"/>
    <g l="lineupZ({{height}}) solidify(polygon)" grouping="off">
        <repeat n="2">
            <regular-polygon
                radius="{{radius}}" sides="{{sides}}" sideLength="{{sideLength}}"/>
        </repeat>
    </g>
</craft>
