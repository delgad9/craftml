<craft>
    <g>
        <style>
            cube {
                something: black;
            }
            cylinder {
                something: green;
            }
        </style>
        <cube></cube>
        <cylinder></cylinder>
        <script>
            function main(params, scope){
                var c0 = scope.solids[0]
                expect(c0).to.have.style('something','black')
                var c1 = scope.solids[1]
                expect(c1).to.have.style('something','green')
            }
        </script>
    </g>


    <g>
        <style>
            cube {
                something: green;
            }
        </style>
        <cube></cube>
        <cube></cube>
        <cube></cube>
        <cube></cube>
        <script>

            function main(params, scope){
                scope.solids.forEach(function(s){
                    expect(s).to.have.style('something','green')
                    expect(s).to.not.have.style('something','black')
                })
            }

        </script>
    </g>

</craft>
