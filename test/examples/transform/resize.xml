<craft>
    <cube size="10 20 30" t="translate(10 0 0) resize(20 20 20)"></cube>
    <script>
        // new size, same center
        expect(this.prev).to.have.size(20,20,20).and.to.have.center(15,10,15)
    </script>

    <cube size="10 20 30" t="translate(10 0 0) resize(5 5 5)"></cube>
    <script>
        // new size, same center
        expect(this.prev).to.have.size(5,5,5).and.to.have.center(15,10,15)
    </script>

    <cube size="10 20 30" t="translate(10 0 0) resize(20)"></cube>
    <script>
        // new size, same center
        expect(this.prev).to.have.size(20,20,20).and.to.have.center(15,10,15)
    </script>

    <cube size="10 20 30" t="translate(10 0 0) resizeX(20)"></cube>
    <script>
        // new size, same center
        expect(this.prev).to.have.size(20,20,30).and.to.have.center(15,10,15)
    </script>

    <cube size="10 20 30" t="translate(10 0 0) resizeX(10) resizeY(10) resizeZ(10)"></cube>
    <script>
        // new size, same center
        expect(this.prev).to.have.size(10,10,10).and.to.have.center(15,10,15)
    </script>


</craft>
