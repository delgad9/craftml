<craft>
    <g>
        <cube transform="translate(-10 0 0)"></cube>
        <cube transform="translate(10 0 0)"></cube>
    </g>
    <script>
        function main(params){
            expect(this).to.have.solid('g').at('0').that.have.
                location(-10,0,0).and.size(30,10,10)

            expect(this).to.have.solid('cube').at('0.0').that.have.
               location(-10,0,0).and.size(10,10,10)

            expect(this).to.have.solid('cube').at('0.1').that.have.
                location(10,0,0).and.size(10,10,10)
        }
    </script>
</craft>
