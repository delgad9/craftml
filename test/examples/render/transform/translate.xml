<craft>

    <g t="translate(10 20 30)" id="top">

        <g>
            <cube t="translate(10 20 30)"></cube>
            <script>
                $('cube').should.have.position(10,20,30)
            </script>
        </g>

        <g>
            <cube t="translate(-10 -20 -30)"></cube>
            <script>
                $('cube').should.have.position(-10,-20,-30)
            </script>
        </g>

    </g>

    <script>
        $('#top').should.have.position(0,0,0)
    </script>

</craft>
