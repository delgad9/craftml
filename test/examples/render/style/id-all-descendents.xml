<craft>

    <style>
        #foo * {
            something: black;
        }
        #bar * {
            something: green;
        }
    </style>

    <g id="foo">
        <cube></cube>
    </g>

    <g id="bar">
        <cube></cube>
    </g>

    <script>
        $('cube').should.have
            .first.with.style('something', 'black')
            .second.with.style('something', 'green')
    </script>

</craft>
