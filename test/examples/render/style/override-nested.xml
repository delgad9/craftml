<craft>

    <style>
        g {
            something: good;
        }
    </style>

    <g id="good1">
        <style>
            g {
                something: great;
            }
        </style>

        <g id="great"></g>

    </g>

    <g id="good2">
    </g>

    <script>        
        $('#great').should.have.style('something', 'great')
        $('#good1').should.have.style('something', 'good')
        $('#good2').should.have.style('something', 'good')
    </script>


</craft>
