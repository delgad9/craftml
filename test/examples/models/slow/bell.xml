<craft name="bell">
    <craft name="ring" module="./../fast/ring.xml"/>

    <craft name="ball">
        <g layout="centerXYZ()" cut=".hollow">
            <sphere radius="10"></sphere>
            <sphere radius="9" class="hollow"></sphere>
        </g>
    </craft>

    <g layout="centerXYZ()" transform="land()" color="goldenrod">
        <ring radius="11" thickness="3" t="scale(1,1,0.2)"/>

        <stack spacing="-0.5">
            <ring radius="4" thickness="2" t="
                rotateX(90)
                scale(0.5,0.5,0.3)
            "></ring>

            <stack spacing="-8" cut=".cross">
                <ball></ball>

                <row layout="centerX()" class="cross">
                    <col spacing="-1" t="rotateZ(45)">
                        <cylinder radius="0.8" height="8" t="
                            scale(2,1,1)
                        "/>
                        <cube size="1 17 8"/>
                        <cylinder radius="0.8" height="8" t="
                            scale(2,1,1)
                        "/>
                    </col>

                    <col spacing="-1" transform="rotateZ(-45)">
                        <cylinder radius="0.8" height="8" t="
                            scale(2,1,1)
                        "/>
                        <cube size="1 17 8"/>
                        <cylinder radius="0.8" height="8" t="
                            scale(2,1,1)
                        "/>
                    </col>
                </row>
            </stack>
        </stack>
    </g>

</craft>
