<craft name="pinwheel">
    
    <craft name="curl">
        <col l="alignX(0%)">
            <cube size="10 10 5"></cube>
            <prism sideLength="14.14" height="5" t="
                scale(1 0.58 1)
                rotateZ(45)
            "></prism>
        </col>
    </craft>

    <g l="centerXYZ()">
        <g>
            <repeat n="4">
                <curl t="translate(2.5,0,0)"/>
                <curl t="rotateZ(90) translate(-5,-12.5,0)"/>
                <curl t="rotateZ(180) translate(7.5,-20,0)"/>
                <curl t="rotateZ(270) translate(15,-7.5,0)"/>
            </repeat>
        </g>
        <cylinder radius="1" height="6" color="white"></cylinder>
    </g>

</craft>
