<craft name="rocket">
    <info>
        <title>Rocket</title>
    </info>

    <craft name="segment" src="cone-frustum.xml"/>
    <craft name="tip" src="cone.xml"/>

    <part name="body">
        <stack transform="scale(0.8)">
            <tip radius="6" height="10"></tip>
            <segment r1="9" r2="6" height="20"></segment>
            <segment r1="10" r2="9" height="30"></segment>
        </stack>
    </part>

    <part name="wing">
        <prism transform="rotateX(-90) scale(0.5,2,1)"></prism>
    </part>

    <part name="wing-pair">
        <g layout="lineupY(10)">
            <wing></wing>
            <wing transform="mirrorY()"></wing>
        </g>
    </part>

    <part name="wings">
        <wing-pair></wing-pair>
        <wing-pair transform="rotateZ(90)"></wing-pair>
    </part>


    <g layout="centerXY() alignZ(0%)">
        <body></body>
        <wings></wings>
    </g>

</craft>
