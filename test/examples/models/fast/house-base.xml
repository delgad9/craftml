<craft>
    <info>
        <title>House Base</title>
    </info>

    <parameter name="length" type="int" default="60"/>
    <parameter name="width" type="int" default="60"/>
    <parameter name="height" type="int" default="40"/>

    <craft name="chimney">
        <stack>
            <cube size="11 11 3" color="firebrick"></cube>
            <cube size="10 10 20" color="white"></cube>
            <script>
                this.parent.pp()
            </script>
        </stack>
    </craft>

    <part name="base">
        <stack spacing="{{-width / 2}}">
            <row spacing="-4" color="firebrick">
                <cube size="{{width / 1.3}} {{length + 5}} 3" transform="rotateY(-42)"></cube>
                <cube size="{{width / 1.3}} {{length + 5}} 3" transform="rotateY(42)"></cube>
            </row>

            <stack color="white">
                <prism width="{{width}}" length="{{length}}" transform="rotateZ(180) scale(1,1,0.9)"></prism>
                <cube size="{{width}} {{length}} {{height}}"></cube>
            </stack>
        </stack>
    </part>

    <stack spacing="-22" layout="alignX(80%) alignY(30%)">
        <chimney></chimney>
        <base></base>
    </stack>

</craft>
