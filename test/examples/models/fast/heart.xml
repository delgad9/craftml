<craft name="heart">
    <parameter name="height" type="int" default="5"/>

    <g layout="centerX() lineupY(-9.7)">
        <row spacing="-2">
            <repeat n="2">
                <cylinder radius="6" height="{{height}}" transform="scale(1,1.2,1)"/></cylinder>
            </repeat>
        </row>

        <cylinder radius="7" height="{{height}}" resolution="4" transform="scale(1.2,1.2,1)"></cylinder>
    </g>

</craft>
