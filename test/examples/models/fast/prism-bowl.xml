<craft>
    <info>
        <title>Prism Bowl</title>
    </info>

    <craft name="star-layout" module="./star-layout.xml"/>

    <part name="ring">
        <parameter name="radius" type="int" default="30"/>
        <g l="centerXY()">
            <g>
                <star-layout radius="{{radius}}">
                    <repeat n="{{radius/1.4}}">
                        <prism t="rotateX(180)"></prism>
                    </repeat>
                </star-layout>
            </g>
            <g>
                <star-layout radius="{{radius-5}}">
                    <repeat n="{{radius/1.4}}">
                        <prism ></prism>
                    </repeat>
                </star-layout>
            </g>
        </g>
    </part>

    <stack>
        <repeat each="i" in="{{[30,25,20,15,10]}}">
            <ring radius="{{i}}"></ring>
        </repeat>
    </stack>

</craft>
